        <TextBox Grid.Row="0" Grid.Column="1" Margin="448,115,63,0"/>
        <Button Grid.Row="0" Grid.Column="1" Width="70" Height="65" Margin="378,115,0,0"/>
        <Image Grid.Row="1" Grid.Column="1" Margin="10,0,267,0"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="378,0,0,65"/>
        <Button Grid.Row="1" Grid.Column="1" Width="63" Height="65" Margin="577,115,0,0" VerticalAlignment="Top"/>
        <TextBox Grid.Row="1" Grid.Column="1" Margin="448,115,63,0"/>
        <Button Grid.Row="1" Grid.Column="1" Width="70" Height="65" Margin="378,115,0,0"/>
        <Image Grid.Row="2" Grid.Column="1" Margin="10,0,267,0"/>
        <TextBox Grid.Row="2" Grid.Column="1" Margin="378,0,0,65"/>
