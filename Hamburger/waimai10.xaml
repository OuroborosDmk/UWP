        <RepeatButton Width="94" Delay="500" Interval="100" Click="Increase_Click" Grid.Column="1" Margin="477,148,0,0" Grid.Row="3">多吃点</RepeatButton>
        <RepeatButton Width="94" Delay="500" Interval="100" Click="Decrease_Click" Grid.Column="1" Margin="378,148,0,0" Grid.Row="3" Height="32">少吃点</RepeatButton>
        <TextBlock x:Name="clickTextBlock" Text=" ('▽`)ﾉ :" Grid.Column="1" Margin="378,120,0,28" Grid.Row="3" RenderTransformOrigin="-0.965,-0.562" />

    </Grid>
