                    <GradientStop Color="red" Offset="0"></GradientStop>
                    <GradientStop Color="black" Offset="0.95"></GradientStop>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button10" Content="Button" HorizontalAlignment="Left" Width="426" Grid.Row="0" Grid.Column="0" VerticalAlignment="Top" Height="180" Click="button10_Click">
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop Color="red" Offset="0"></GradientStop>
                    <GradientStop Color="black" Offset="0.25"></GradientStop>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button11" Content="Button" HorizontalAlignment="Left" Width="426" Grid.Row="0" Grid.Column="1" VerticalAlignment="Top" Height="180" Click="button11_Click">
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop Color="red" Offset="1"></GradientStop>
                    <GradientStop Color="black" Offset="0.1"></GradientStop>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
        <Button x:Name="button12" Content="Button" HorizontalAlignment="Left" Width="426" Grid.Row="0" Grid.Column="2" VerticalAlignment="Top" Height="180" Click="button12_Click">
            <Button.Background>
                <LinearGradientBrush>
                    <GradientStop Color="red" Offset="0"></GradientStop>
                    <GradientStop Color="black" Offset="0.2"></GradientStop>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Page>
